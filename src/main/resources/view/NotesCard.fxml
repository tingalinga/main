<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox minHeight="50" styleClass="cardPane" xmlns:fx="http://javafx.com/fxml/1" >
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox fx:id="notesPane" alignment="CENTER_LEFT" minHeight="50" GridPane.columnIndex="0" >
            <padding>
                <Insets bottom="5" left="15" right="5" top="5" />
            </padding>
            <Label fx:id="name" styleClass="cell_notes_label" text="\$name" />
            <Label fx:id="priority" styleClass="cell_notes_label" text="\$priority" />
            <Label fx:id="dateTime" styleClass="cell_notes_label" text="\$dateTime"/>
            <Label fx:id="content" styleClass="cell_notes_label" text="\$content" wrapText="true"/>
        </VBox>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
    </GridPane>
</VBox>
